{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "outDir": "./build",
        "removeComments": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strictPropertyInitialization": false,
        "types": ["node"],
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "noImplicitAny": false
    },
    "exclude": ["node_modules", "streams.ts"]
}
