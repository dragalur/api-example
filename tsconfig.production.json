{
    "compilerOptions": {
        "target": "ESNext",
        "module": "commonjs",
        "strict": true,
        "outDir": "./build",
        "removeComments": true,
        "sourceMap": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strictPropertyInitialization": false,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "noImplicitAny": false
    },
    "include": ["src/**/*", "package.json", "app.ts"],
    "exclude": ["node_modules"]
}
